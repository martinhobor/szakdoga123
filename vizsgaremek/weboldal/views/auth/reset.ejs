<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div>
                <%= errorMessage %>
            </div>
        <% } %>
            <form class="reset-form" action="/reset" method="POST">
             <!-- Section: Design Block -->
<section class=" text-center text-lg-start">
    <style>
      .rounded-t-5 {
        border-top-left-radius: 0.5rem;
        border-top-right-radius: 0.5rem;
      }
  
      @media (min-width: 992px) {
        .rounded-tr-lg-0 {
          border-top-right-radius: 0;
        }
  
        .rounded-bl-lg-5 {
          border-bottom-left-radius: 0.5rem;
        }
      }
    </style>
    <div class="card mb-3">
      <div class="row g-0 d-flex align-items-center">
        <div class="col-lg-4 d-none d-lg-flex">
          <img src="https://media.istockphoto.com/vectors/change-password-linear-icon-password-reset-line-icon-circular-arrow-vector-id1321309032?k=20&m=1321309032&s=612x612&w=0&h=4YQMGC8f1BJ2oektIXDWmi_KQnSvLK9Zmn8HPOML7yw=" alt="Trendy Pants and Shoes"
            class="w-100 rounded-t-5 rounded-tr-lg-0 rounded-bl-lg-5" />
        </div>
        <div class="col-lg-8">
          <div class="card-body py-5 px-md-5">
  
            <form class="reset-form" action="/reset" method="POST" >

              <!-- Email input -->
              <div class="form-outline mb-4">
                <label class="form-label" for="email">Email address</label>
                <input type="email" id="email" class="form-control" name="email"/>               
              </div>
              <!-- Submit button -->
              <button type="submit" class="btn btn-primary btn-block mb-4" name="_csrf" value="<%= csrfToken %>">Reset Password</button> 
  
            </form> 
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Section: Design Block -->
  </form>
</main>
<%- include('../includes/end.ejs') %>
